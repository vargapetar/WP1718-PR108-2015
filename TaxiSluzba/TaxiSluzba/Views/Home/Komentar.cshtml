@model TaxiSluzba.Models.Voznja
@{
    ViewBag.Title = "Komentar";
}

<h2>Komentar</h2>
<form action="/Home/KomentarMusterija">
    <table>
        <tr>
            <td>Opis: </td>
            <td><textarea name="comment" rows="8" cols="100"></textarea> </td>
        </tr>
        @if (Model.statusVoznje == TaxiSluzba.Models.StatusVoznje.USPESNA)
        {
            <tr>
                <td>Ocena: </td>
                <td align="left">
                    <select name="ocena">
                        <option value="JEDAN">1</option>
                        <option value="DVA">2</option>
                        <option value="TRI">3</option>
                        <option value="CETIRI">4</option>
                        <option value="PET">5</option>
                    </select>
                </td>
            </tr>
        }
        <tr>
            <td colspan="2" align="center"><input type="submit" value="Ostavi komentar" onclick="alert('Komentar je ostavljen')"></td>
        </tr>
    </table>
    <input type="hidden" name="datumVoznje" value="@Model.datumVreme">
    <input type="hidden" name="userKorisnika" value="@Model.musterija.korisnickoIme">
</form>

