<html>
    <head>
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <style>
            .split {
                height: 100%;
                width: 50%;
                position: fixed;
                z-index: 1;
                top: 0;
                overflow-x: hidden;
                padding-top: 20px;
            }

            .left {
                left: 0;
                background-color: #ffa64d;
            }

            .right {
                right: 0;
                background-color: #ff471a;
            }

            .centered {
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                text-align: center;
            }

                .centered img {
                    width: 150px;
                    border-radius: 50%;
                }
        </style>
    </head>
<body>
    <div class="split left">
        <div class="centered">
            <h1>Registracija</h1>
            <form action="/Home/Registracija" method="post">
                <table>
                    <tr>
                        <td>Korisnicko ime:</td>
                        <td><input type="text" data-val="true" data-val-length="Minimum 1 karakter" data-val-length-max="20" data-val-length-min="1" data-val-required="*" name="user"> <span class="text-danger field-validation-error" data-valmsg-for="user" data-valmsg-replace="true"></span></td>
                    </tr>
                    <tr>
                        <td>Lozinka: </td>
                        <td><input type="password" data-val="true" data-val-length="Minimum 3 karaktera" data-val-length-max="20" data-val-length-min="3" data-val-required="*" name="pass"><span class="text-danger field-validation-error" data-valmsg-for="pass" data-valmsg-replace="true"></span></td>
                    </tr>
                    <tr>
                        <td>Ime: </td>
                        <td><input type="text" data-val="true" data-val-length="Minimum 1 karakter" data-val-length-max="20" data-val-length-min="1" data-val-required="*" name="ime"><span class="text-danger field-validation-error" data-valmsg-for="ime" data-valmsg-replace="true"></span></td>
                    </tr>
                    <tr>
                        <td>Prezime: </td>
                        <td><input type="text" data-val="true" data-val-length="Minimum 1 karakter" data-val-length-max="20" data-val-length-min="1" data-val-required="*" name="prezime"><span class="text-danger field-validation-error" data-valmsg-for="prezime" data-valmsg-replace="true"></span></td>
                    </tr>
                    <tr>
                        <td>Pol: </td>
                        <td align="left">
                            <select name="pol">
                                <option value="MUSKI">Muski</option>
                                <option value="ZENSKI">Zenski</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>JMBG: </td>
                        <td><input type="text" data-val="true" data-val-length="Minimum 13 karakter" data-val-length-max="20" data-val-length-min="13" data-val-required="*" name="jmbg"><span class="text-danger field-validation-error" data-valmsg-for="jmbg" data-valmsg-replace="true"></span></td>
                    </tr>
                    <tr>
                        <td>Kontakt telefon: </td>
                        <td><input type="text" data-val="true" data-val-length="Minimum 9 karaktera" data-val-length-max="20" data-val-length-min="9" data-val-required="*" name="telefon"><span class="text-danger field-validation-error" data-valmsg-for="telefon" data-valmsg-replace="true"></span></td>
                    </tr>
                    <tr>
                        <td>Email: </td>
                        <td><input type="text" data-val="true" data-val-length="Minimum 5 karaktera" data-val-length-max="20" data-val-length-min="5" data-val-required="*" name="email"><span class="text-danger field-validation-error" data-valmsg-for="email" data-valmsg-replace="true"></span></td>
                    </tr>
                    <tr>
                        <td colspan="2" align="center"><input type="submit" value="Registruj se"></td>
                    </tr>
                </table>
            </form>
        </div>
    </div>

    <div class="split right">
        <div class="centered">
            <h1>Logovanje</h1>
            <form action="/Home/Logovanje" method="post">
                <table>
                    <tr>
                        <td>Korisnicko ime:</td>
                        <td><input type="text" data-val="true" data-val-length="Minimum 1 karakter" data-val-length-max="20" data-val-length-min="1" data-val-required="*"  name="user"><span class="text-danger field-validation-error" data-valmsg-for="user" data-valmsg-replace="true"></span></td>
                    </tr>
                    <tr>
                        <td>Lozinka: </td>
                        <td><input type="password" data-val="true" data-val-length="Minimum 3 karaktera" data-val-length-max="20" data-val-length-min="3" data-val-required="*"  name="pass"><span class="text-danger field-validation-error" data-valmsg-for="pass" data-valmsg-replace="true"></span></td>
                    </tr>
                    <tr>
                        <td colspan="2" align="center"><input type="submit" value="Log in"></td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</body>
</html>

