                            <option value="MUSKI">Muski</option>
                            <option value="ZENSKI">Zenski</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>JMBG: </td>
                    <td><input type="text"data-val="true" data-val-length="Najmanje 13 karaktera" data-val-length-max="20" data-val-length-min="13" data-val-required="*"  name="jmbg"><span class="text-danger field-validation-error" data-valmsg-for="jmbg" data-valmsg-replace="true"></td>
                </tr>
                <tr>
                    <td>Kontakt telefon: </td>
                    <td><input type="text" data-val="true" data-val-length="Najmanje 9 karaktera" data-val-length-max="20" data-val-length-min="9" data-val-required="*" name="telefon"><span class="text-danger field-validation-error" data-valmsg-for="telefon" data-valmsg-replace="true"></td>
                </tr>
                <tr>
                    <td>Email: </td>
                    <td><input type="text" data-val="true" data-val-length="Najmanje 5 karaktera" data-val-length-max="20" data-val-length-min="5" data-val-required="*" name="email"><span class="text-danger field-validation-error" data-valmsg-for="email" data-valmsg-replace="true"></td>
                </tr>
                <tr>
                    <td>Godiste automobila: </td>
                    <td><input type="text" data-val="true" data-val-length="Najmanje 4 karaktera" data-val-length-max="20" data-val-length-min="4" data-val-required="*" name="godisteAuto"><span class="text-danger field-validation-error" data-valmsg-for="godisteAuto" data-valmsg-replace="true"></td>
                </tr>
                <tr>
                    <td>Registracija automobila: </td>
                    <td><input type="text" data-val="true" data-val-length="Najmanje 3 karaktera" data-val-length-max="20" data-val-length-min="3" data-val-required="*" name="regAuto"><span class="text-danger field-validation-error" data-valmsg-for="regAuto" data-valmsg-replace="true"></td>
                </tr>
                <tr>
                    <td>Broj automobila: </td>
                    <td><input type="text" data-val="true" data-val-length="Najmanje 1 karaktera" data-val-length-max="20" data-val-length-min="1" data-val-required="*" name="brAuto"><span class="text-danger field-validation-error" data-valmsg-for="brAuto" data-valmsg-replace="true"></td>
                </tr>
                <tr>
                    <td>Tip automobila: </td>
                    <td align="left">
                        <select name="tipAuto">
                            <option value="PUTNICKI_AUTOMOBIL">Putnicki automobil</option>
                            <option value="KOMBI">Kombi</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="center"><input type="submit" value="Kreiraj vozaca"></td>
                </tr>
            </table>
        </form>



    </div>

    <div id="KreirajVoznju" class="tabcontent">
        <form action="/Home/KreirajVoznju" method="post">
            <table>
                <tr>
                    <td>Ulica: </td>
                    <td><input type="text" name="ulica"></td>
                </tr>
                <tr>
                    <td>Broj: </td>
                    <td><input type="text" name="broj"></td>
                </tr>
                <tr>
                    <td>Grad: </td>
                    <td><input type="text" name="grad"></td>
                </tr>
                <tr>
                    <td>Postanski broj: </td>
                    <td><input type="text" name="poBroj"></td>
                </tr>
                <tr>
                    <td>Tip prevoza: </td>
                    <td align="left">
                        <select name="tipPrevoza">
                            <option value="PUTNICKI_AUTOMOBIL">Putnicki automobil</option>
                            <option value="KOMBI">Kombi</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>Slobodni vozaci:</td>
                    <td align="left">
                        <select name="izabraniVozac">
                            @{
                                foreach (TaxiSluzba.Models.Vozac v in TaxiSluzba.Models.Database.vozaci.Values)
                                {
                                    if (v.slobodan == true)
                                    {
                                        <option value="@v.korisnickoIme">@v.korisnickoIme, @v.automobil.tipAutomobila.ToString()</option>
                                    }
                                }
                            }
                        </select>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="center"><input type="submit" value="Kreiraj voznju" onclick="alert('Voznja je dodeljena vozacu')"></td>
                </tr>
            </table>
        </form>
    </div>

    <div id="DodeliVoznju" class="tabcontent">
        <h1> Dodela voznje </h1>
        <h4> Spisak voznji na cekanju</h4>
        <form action="/Home/DodeliVozacaVoznji" method="post">
            <select name="voznja">
                @{
                    foreach (TaxiSluzba.Models.Voznja v in TaxiSluzba.Models.Database.sveVoznje.Values)
                    {
                        if (v.statusVoznje == TaxiSluzba.Models.StatusVoznje.KREIRANA_NA_CEKANJU)
                        {
                            <option value="@v.datumVreme.ToString()">@v.musterija.korisnickoIme - @v.lokacijaZaTaksi.Adress.Ulica @v.lokacijaZaTaksi.Adress.BrojUlice, @v.lokacijaZaTaksi.Adress.Grad, @v.lokacijaZaTaksi.Adress.PozivniBroj - @v.tipAutomobila.ToString() </option>
                        }
                    }
                }
            </select>

            <h4> Spisak slobodnih vozaca</h4>
            <select name="vozac">
                @{
                    foreach (TaxiSluzba.Models.Vozac v in TaxiSluzba.Models.Database.vozaci.Values)
                    {
                        if (v.slobodan == true)
                        {
                            <option value="@v.korisnickoIme">@v.korisnickoIme - @v.automobil.tipAutomobila.ToString() </option>
                        }
                    }
                }
            </select>
            <input type="submit" value="Dodeli voznju" onclick="alert('Voznja je uspesno dodeljena vozacu')">
        </form>
    </div>

    <div id="SpisakVoznji" class="tabcontent">
        <h4>Spisak svih voznji u sistemu</h4>
        <table border="1">
            <tr>
                <td><b>Datum i vreme:</b></td>
                <td><b>Musterija:</b></td>
                <td><b>Dispecer:</b></td>
                <td><b>Vozac:</b></td>
                <td><b>Status voznje:</b></td>
            </tr>
            @foreach (TaxiSluzba.Models.Voznja v in TaxiSluzba.Models.Database.sveVoznje.Values)
            {
                <tr>
                    <td>@v.datumVreme.ToString()</td>
                    <td align="center">@v.musterija.korisnickoIme</td>
                    <td align="center">@v.dispecer.korisnickoIme</td>
                    <td align="center">@v.vozac.korisnickoIme</td>
                    <td>@v.statusVoznje.ToString()</td>
                    <td><form action="/Home/DetaljiVoznje" method="post"><input type="submit" value="Detalji"><input type="hidden" name="vozac" value="@v.vozac.korisnickoIme"><input type="hidden" name="datumVoznje" value="@v.datumVreme.ToString()"></form></td>
                </tr>
            }
        </table>

        <form action="/Home/Filtriranje" method="post">
            <table>
                <tr>
                    <td>Filtriraj:</td>
                    <td>
                        <select name="statusVoznje">
                            <option value="KREIRANA_NA_CEKANJU">Kreirana, na cekanju</option>
                            <option value="FORMIRANA">Formirana</option>
                            <option value="OBRADJENA">Obradjena</option>
                            <option value="PRIHVACENA">Prihvacena</option>
                            <option value="U_TOKU">U toku</option>
                            <option value="OTKAZANA">Otkazana</option>
                            <option value="NEUSPESNA">Neuspesna</option>
                            <option value="USPESNA">Uspesna</option>
                        </select>
                    </td>
                    <td><input type="submit" value="Filtriraj"></td>
                </tr>
            </table>
        </form>

        <form action="/Home/Sortiranje" method="post">
            <table>
                <tr>
                    <td>Sortiraj po:</td>
                    <td>
                        <select name="sortirajPo">
                            <option value="datumu">Datumu</option>
                            <option value="oceni">Oceni</option>
                        </select>
                    </td>
                    <td><input type="submit" value="Sortiraj"></td>
                </tr>
            </table>
        </form>

        <form action="/Home/PretragaDispecer" method="post">
            <table>
                <tr>
                    <td>Pretraga po datumu:</td>
                    <td><input type="text" name="datumOd"></td>
                    <td><input type="text" name="datumDo"></td>
                </tr>
                <tr>
                    <td>Pretraga po oceni:</td>
                    <td>
                        <select name="ocenaOd">
                            <option value="NULA"></option>
                            <option value="JEDAN">1</option>
                            <option value="DVA">2</option>
                            <option value="TRI">3</option>
                            <option value="CETIRI">4</option>
                            <option value="PET">5</option>
                        </select>
                    </td>
                    <td>
                        <select name="ocenaDo">
                            <option value="NULA"></option>
                            <option value="JEDAN">1</option>
                            <option value="DVA">2</option>
                            <option value="TRI">3</option>
                            <option value="CETIRI">4</option>
                            <option value="PET">5</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>Pretraga po ceni:</td>
                    <td><input type="text" name="cenaOd"></td>
                    <td><input type="text" name="cenaDo"></td>
                </tr>
                <tr>
                    <td>Pretraga vozaca:</td>
                    <td><input type="text" name="imeVozaca"></td>
                    <td><input type="text" name="prezimeVozaca"></td>
                </tr>
                <tr>
                    <td>Pretraga musterije:</td>
                    <td><input type="text" name="imeMusterije"></td>
                    <td><input type="text" name="prezimeMusterije"></td>
                </tr>
                <tr>
                    <td colspan="3" align="center"><input type="submit" value="Pretraga"></td>
                </tr>
            </table>
        </form>
    </div><hr>
    <form action="/Home/Odjava">
        <input type="submit" value="Odjavi se">
    </form>
</body>
</html>





